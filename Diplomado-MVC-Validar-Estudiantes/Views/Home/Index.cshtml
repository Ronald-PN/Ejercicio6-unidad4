@model Diplomado_MVC_Validar_Estudiantes.Models.Estudiante
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <h5> • El nombre es obligatorio </h5>
    <h5> • El apellido es obligatorio </h5>
    <h5> • La edad debe estar entre 14 y 65 años </h5>
</head>
<body>
    <div>
        @Html.ValidationSummary()
        @using (Html.BeginForm())
        {
            <p>
                Ingrese Nombres:
                @Html.EditorFor(model => model.Nombres)
               
            </p>
            <p>
                Ingrese Apellidos:
                @Html.EditorFor(model => model.Apellidos)
               
            </p>
            <p>
                Ingrese Edad entre 14 y 65:
                @Html.EditorFor(model => model.Edad)
               
            </p>
            <p>
                Ingrese Email:
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </p>

            <p>
                Ingrese Genero:
                @Html.EditorFor(model => model.Genero)
             
            </p>
            <p>
                Ingrese EstadoCivil:
                @Html.EditorFor(model => model.EstadoCivil)

            </p>
            <p>
                <input type="submit" value="Confirmar" />
            </p>
        }
    </div>
</body>
</html>

